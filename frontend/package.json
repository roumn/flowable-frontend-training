{
  "name": "frontend",
  "version": "1.0.0",
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "npm run dev-standard && npm run dev-suite",
    "dev-standard": "rimraf dist && npm run build-standard && npm run copy-to-work",
    "build-standard": "npm run clean-work-folder && rimraf dist && mkdirp ./dist && rollup -c --environment BUILD:production --environment BUILDTYPE:standard",
    "build-suite": "npm run clean-design-folder && rimraf dist-suite && mkdirp ./dist-suite && rollup -c --environment BUILD:production --environment BUILDTYPE:suite",
    "create-folders": "mkdirp ./dist && mkdirp ../src/main/resources/static/ext",
    "clean-work-folder": "rimraf ../training-handson-work/src/main/resources/static/ext && mkdirp ../training-handson-work/src/main/resources/static/ext/",
    "clean-design-folder": "rimraf ../training-handson-design/src/main/resources/public/js/flowable-forms-training/ && mkdirp ../training-handson-design/src/main/resources/public/js/flowable-forms-training/",
    "dev-suite": "rimraf dist-suite && npm run build-suite && npm run copy-to-design",
    "copy-to-work": "cpx ./dist/**/* ../training-handson-work/src/main/resources/static/ext",
    "copy-to-design": "cpx  ./dist-suite/**/* ../training-handson-design/src/main/resources/public/js/flowable-forms-training/"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@flowable/work-scripts": "3.16.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "storybook": "^8.2.6",
    "typescript": "5.5.4",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "cpx": "^1.5.0",
    "rollup": "^3.18.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-scss": "^4.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.1",
    "@chromatic-com/storybook": "^1.6.1",
    "@storybook/addon-essentials": "^8.2.6",
    "@storybook/addon-interactions": "^8.2.6",
    "@storybook/addon-links": "^8.2.6",
    "@storybook/addon-onboarding": "^8.2.6",
    "@storybook/blocks": "^8.2.6",
    "@storybook/react": "^8.2.6",
    "@storybook/react-vite": "^8.2.6",
    "@storybook/test": "^8.2.6",
    "storybook-addon-mock": "^5.0.0",

    "sass": "^1.58.3",
    "sass-loader": "^13.2.0",
    "cpr": "^3.0.1"
  },
  "compilerOptions": {
    "jsx": "react",
    "module": "esNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "strict": true,
    "strictFunctionTypes": false,
    "target": "es5",
    "sourceMap": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
